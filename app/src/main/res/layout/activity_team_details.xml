<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".teamdetails.TeamDetailsActivity">
    
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_36dp"
        android:padding="@dimen/_16dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/tvName"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Liverpool"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="@dimen/_6dp"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        >

        <TextView
            android:id="@+id/tvWins"
            style="@style/rvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_20dp"
            android:paddingTop="@dimen/_16dp"
            android:paddingEnd="@dimen/_20dp"
            android:paddingBottom="@dimen/_16dp"
            android:text="@string/wins" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        app:cardBackgroundColor="@color/cardBackground"
        android:paddingStart="@dimen/_20dp"
        android:paddingTop="@dimen/_16dp"
        android:paddingEnd="@dimen/_20dp"
        android:paddingBottom="@dimen/_16dp"
        app:cardCornerRadius="@dimen/_6dp"
        app:layout_constraintLeft_toRightOf="@id/cvWins"
        app:layout_constraintTop_toBottomOf="@+id/tvName">

        <TextView
            android:id="@+id/tvLosses"
            style="@style/rvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_20dp"
            android:paddingTop="@dimen/_16dp"
            android:paddingEnd="@dimen/_20dp"
            android:paddingBottom="@dimen/_16dp"
            android:text="@string/wins" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvRoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvWins"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/roster"
        style="@style/smallTitle"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRoster"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoster"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>