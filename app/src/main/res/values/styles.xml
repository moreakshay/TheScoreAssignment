<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <style name="Title" parent="FontBold">
        <item name="android:textSize">@dimen/font_26sp</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="SubTitle" parent="FontRegular">
        <item name="android:textSize">@dimen/font_24sp</item>
        <item name="android:textColor">@color/textSubTitle</item>
    </style>

    <style name="Name" parent="FontBold">
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textColor">@color/textReg</item>
    </style>

    <style name="rvItem" parent="FontRegular">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/textReg</item>
    </style>
    
    <style name="smallTitle" parent="FontLight">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/textSubTitle</item>
    </style>

    <!--Fonts-->

    <style name="FontLight">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="FontRegular">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="FontBold">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

</resources>